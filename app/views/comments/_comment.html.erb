<dt><%= comment.user.username %> : </dt>
<dd><%= comment.content %>
  <% if comment.user == current_user %>
    <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" }, remote: true do %>
     <span class="glyphicon glyphicon-remove"></span>
    <%end%>
  <% end %>
</dd>