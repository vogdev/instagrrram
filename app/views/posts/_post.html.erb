<div class="col-sm-12 col-md-12 posts-grid">
  <div class="thumbnail">
    <div class="thumbnail-header">
      <div class="user_info">
          <%= image_tag post.user.user_image.url(:thumb), class: "img-circle post-user-img" %>
          <p class="bt"><%= link_to post.user.username, profile_path(post.user.id) %></p>
      </div>
      <div class="post-date">
        <p><%= time_ago_in_words(post.created_at).gsub('about','')%></p>
      </div>
    </div>
    <div class="post-image">
    <%= image_tag post.image.url(:original), class: "img-responsive" %>
    </div>
      <div class="caption">
        <p class="bt"><%= pluralize( post.get_upvotes.size, 'like' ) %></p>
        <% if post.comments %>
            <div class="post-comments">
              <dl class="dl-horizontal">
                <% post.comments.last(4).each do |comment| %>
                     <dt><%= comment.user.username %> : </dt>
                      <dd><%= comment.content %>
				<% if comment.user == current_user %>
					<%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
						<span class="glyphicon glyphicon-remove"></span>
					<%end%>
				<% end %>
                      </dd>
                <% end %>
              </dl>
          </div>
        <% end %>
        <% if current_user.voted_up_on? post%>
            <%= link_to unlike_post_path(post), class: "btn btn-floating", method: :put do %>
              <span class="glyphicon glyphicon-heart">
            <%end%>
          <%else%>
            <%= link_to like_post_path(post), class: "btn btn-floating", method: :put do %>
             <span class="glyphicon glyphicon-heart-empty">
            <%end%>
        <%end %>
            <%= form_for [post, post.comments.new] do |f| %>
                <%= f.text_field :content, placeholder: 'Add a comment...', class: "orm-control post-comment-input" %>
            <% end %>
      </div>
  </div>
</div>