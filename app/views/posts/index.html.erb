<div class="row">
<h1><%= current_user.username%></h1>
	<% @posts.each  do |post| %>
		<div class="col-xs-12 col-md-12">
			<div class="post">
				<div class="post-header">
					<p class="pull-left">	<%= post.caption%></p>
					<%= link_to post.user.username, profile_path(post.user.id) %>
					<p class="pull-right"><%= time_ago_in_words(post.created_at).gsub('about','')%></p>
				</div>
				<%= link_to (image_tag post.image.url(:original), class:'img-responsive'), post_path(post), clas: "thumbnail" %>
				<% if current_user.voted_up_on? post%>
						<%= link_to "unLike", unlike_post_path(post), method: :put %>
					<%else%>
					<%= link_to "Like", like_post_path(post), method: :put %>
				<%end %>
				<p class="bf"><%= pluralize( post.get_upvotes.size, 'like' ) %></p>
				<% if post.comments %>
					<ul class="list-unstyled comments">
						<% post.comments.each do |comment| %>
						<li>
							<p class="bf"><%= comment.user.email %>:</p>
							<p><%= comment.content %></p>
							<% if comment.user == current_user %>
								<%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
									<span class="glyphicon glyphicon-remove"></span>
								<%end%>
							<% end %>
						</li>
						<% end %>
					</ul>
				<% end %>
				<%= form_for [post, post.comments.new] do |f| %>
					<%= f.text_field :content, placeholder: 'Add a comment...', class: "form-control" %>
				<% end %>
			</div>
		</div>
	<%end%>
</div>