<%= link_to "add new post", new_post_path%>
<% @posts.each  do |post| %>
	<%= post.caption%>
	<%= time_ago_in_words(post.created_at).gsub('about','')%>
	<%= post.get_upvotes.size%>
	<%= link_to (image_tag post.image.url(:original), class:'img-responsive'), post_path(post) %>
	<% if current_user.voted_up_on? post%>
		<%= link_to "unLike", unlike_post_path(post), method: :put %>
		<%else%>
		<%= link_to "Like", like_post_path(post), method: :put %>
	<%end %>

	<% if post.comments %>
		<% post.comments.each do |comment| %>
			<%= comment.user.email %>
			<%= comment.content %>
			<% if comment.user == current_user %>
				<%= link_to"Delete your comment", post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
			<% end %>
		<% end %>
	<% end %>

<div class="comment-form">
  <%= form_for [post, post.comments.new] do |f| %>
    <%= f.text_field :content, placeholder: 'Add a comment...' %>
  <% end %>
</div>
<%end%>