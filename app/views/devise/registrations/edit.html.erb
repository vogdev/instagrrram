<div class="container">
<div class="row top-container">
<div class="col-sm-12 col-md-12 edit-user ">
<center>
  
  </center>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  <%= image_tag @user.user_image.url(:original), class:'img-circle user-profile-img', id: "profile-img"%>
  <br/>
        <label class="btn-user">
          <span class="glyphicon glyphicon-paperclip"></span>  Browse images  
         <div class="teste">
         <%= f.input :user_image, as: :file, :input_html => {:onchange => "readURL(this)"} %>  
         </div> 
        </label>
  <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
  <%= f.input :username, required: true, placeholder: 'User Name', input_html: { class: 'form-control' } %>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
  <% end %>
  <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: 'form-control' } %>
  <%= f.input :password_confirmation, required: false, input_html: { class: 'form-control' } %>
  <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-actions">
  <%= f.button :submit, "Update", class: "update-btn" %>
  </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>
</div>
</div>
</div>
